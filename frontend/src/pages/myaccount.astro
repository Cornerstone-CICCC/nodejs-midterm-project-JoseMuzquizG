---
import AccountLayout from "../layouts/AccountLayout.astro"
import RelaxType from "../components/RelaxType.astro"
---
<AccountLayout>
    <div class="home">
        <div class="welcome">
            <h1 class="inter-b">Welcome!</h1>
            <h2 class="inter-off">Take a deep breath, take a few minutes, feel free to give yourself some relaxation</h2>
        </div>
        <div class="content">
            <div class="title itim">
                <h2>Choose your relaxing method</h2>
            </div>
            <div class="types">
                <RelaxType 
                image="/src/assets/cat.png", 
                title="CATS",
                styleText="Visual relaxing"/>
                <RelaxType 
                image="/src/assets/dog.png", 
                title="DOGS",
                styleText="Visual relaxing"/>
            </div>
        </div>
    </div>
</AccountLayout>

<style>
    .home {
        padding: 1rem 2rem;
        display: flex;
        flex-direction: column;
        gap: 3rem;
    }

    .welcome {
        display: flex;
        flex-direction: column;
        gap: .5rem;
        align-items: center;
        text-align: center;
    }

    .welcome h1 {
        font-size: 2rem;
    }
    .welcome h2{
        font-size: .875rem;
    }

    .content {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        gap: 2rem;
    }

    .types {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    @media screen and (min-width: 768px) {
        .welcome {
            align-items: start;
            text-align: start;
        }
        .types{
            display: grid;
            grid-template-columns: repeat(2, 1fr);
        }
    }
</style>