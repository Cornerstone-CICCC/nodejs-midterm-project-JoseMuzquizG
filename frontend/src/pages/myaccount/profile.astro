---
import AccountLayout from "../../layouts/AccountLayout.astro";
---

<AccountLayout>
    <div class="profile">
        <div class="profile-header inter-b">
            <h1>My Account</h1>
        </div>
        <div class="profile-settings">
            <div class="details">
                <h2 class="inter-sb">Account details</h2>
                <p class="inter-off">Profile and account details</p>
            </div>
            <form id="details" class="inter-sb">
                <label class="fullname">
                    Fullname: <br>
                        <input class="inter-off" type="text" name="fullname" placeholder="John Smith" required>
                </label>
                <label>
                    Username: <br>
                        <input type="text" name="username" placeholder="johnnysmithy123" required>
                </label>
                <label>
                    Password: <br>
                        <input type="password" name="password" placeholder="Password" required>
                </label>
            </form>
        </div>
    </div>
</AccountLayout>

<style>
    .profile {
        padding: 1rem 2rem;
        display: flex;
        flex-direction: column;
        gap: 3rem;
    }
    .profile-settings {
        width: 100%;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        gap: 1.75rem;
        padding: 1rem;
        border-radius: 10px;
        border: 1px solid #DEEDE8;
        box-shadow: 1px 1px 5px #86868686;
    }
    #details {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        font-size: .875rem;
    }
    #details input {
        border-radius: 5px;
        border: 1px solid #868686;
        font-size: .875rem;
        width: 100%;
        padding: .5rem .75rem;
        background-color: #F9FBFB;
    }

    @media screen and (min-width: 768px) {
        .profile-settings {
            width: 80%;
            max-width: 700px;
        }
    }
</style>