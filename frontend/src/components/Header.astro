---
import Sidebar from "./Sidebar.astro"
---

<header class="header">
    <menu class="burger">
        <span></span>
        <span></span>
        <span></span>
    </menu>
    <div class="burger-side">
        <Sidebar />
    </div>
    <div class="overlay"></div>
    <div class="section inter-b">HOME</div>
    <div class="message inter-off">Hello, John Smith</div>
</header>

<script>
    const menuBtn = document.querySelector('.burger') as HTMLMenuElement
    const sideMenu = document.querySelector('.burger-side') as HTMLDivElement
    const overlay = document.querySelector('.overlay') as HTMLDivElement
    menuBtn.addEventListener('click', () => {
        sideMenu.classList.add('active')
        overlay.classList.add('active')
    })
    overlay.addEventListener('click', () => {
        sideMenu.classList.remove('active')
        overlay.classList.remove('active')
    })
</script>

<style>
    .burger {
        cursor: pointer;
        align-content: center;
        height: 50px;
        width: 50px;
        position: relative;
        min-width: 50px;
    }

    .burger-side {
        background-color: white;
        display: flex;
        flex-direction: column;
        max-width: 100%;
        height: 100%;
        position: fixed;
        left: -100%;
        top: 0;
        justify-content: space-evenly;
        transition: .3s ease-in-out;
        overflow-y: auto;
        z-index: 2;
    }
    .burger-side.active {
        left: 0;
    }

    span {
        display: block;
        width: 50px;
        height: 5px;
        border-radius: 2px;
        background-color: #193c4d;
    }
    .burger span:nth-child(2) {
        margin: 10px 0;
    }

    .overlay {
        width: 100vw;
        height: 100vh;
        background-color: rgb(0, 0, 0, 0.3);
        display: flex;
        position: fixed;
        right: -100vw;
        top: 0;
        transition: .3s ease-in-out;
        z-index: 1;
    }
    .overlay.active {
        right: 0;
    }

    header {
        display: flex;
        padding: 1.25rem 1.5rem;
        flex-direction: row;
        width: 100%;
        justify-content: space-between;
        border-bottom: 1px solid #DEEDE8;
        align-items: center;
        gap: 1rem;
    }
    .section {
        font-size: 1.25rem;
    }
    .message {
        font-size: .875rem;
        max-width: 30%;
    }

    @media screen and (min-width: 768px) {
        .burger {
            display: none;
        }
    }
</style>